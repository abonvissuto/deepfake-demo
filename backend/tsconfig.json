{
  "compilerOptions": {
    "target": "ES2022", // modern JS runtime
    "module": "NodeNext", // Node ESM compatible, replaces deprecated 'node'
    "moduleResolution": "NodeNext", // correct resolution for ESM
    "esModuleInterop": true, // allows import express from 'express'
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
